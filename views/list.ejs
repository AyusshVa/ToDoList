
<%- include("header") -%>
    <div class="box" id="heading">
        <h1>
            <%= heading%>
        </h1>
    </div>
    <div class="box">
        <% newListItems.forEach((ele)=>{  %>
            <form action="/delete" method="post">
            <div class="item">
                    <input type="checkbox" name = "checkbox" onChange="this.form.submit()" value="<%= ele._id%>">
                    <p>
                        <%= ele.name %>
                    </p>
                </div>
            </form>
       <% }) %>
       
            <form class="box" action="/" method="post">
                <input type="text" name="item" placeholder="New item" autocomplete="off">
                <button class="btn" type="submit" name="list" value=<%= heading %>>+</button>
            </form>
            <%- include("footer") -%>